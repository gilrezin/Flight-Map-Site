<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flight Map Admin Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f5f5f5;
        }
        
        .header {
            background-color: #333;
            color: white;
            padding: 15px;
            text-align: center;
        }
        
        .container {
            max-width: 1000px;
            margin: 20px auto;
            background-color: white;
            padding: 20px;
            border-radius: 5px;
        }
        
        .section {
            margin-bottom: 30px;
            border: 1px solid #ddd;
            padding: 15px;
            border-radius: 5px;
        }
        
        .section h2 {
            color: #333;
            border-bottom: 2px solid #007bff;
            padding-bottom: 5px;
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }
        
        .stat-card {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            text-align: center;
        }
        
        .stat-number {
            font-size: 2em;
            font-weight: bold;
            color: #007bff;
        }
        
        .stat-label {
            color: #666;
            margin-top: 5px;
        }
        
        button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            margin: 5px;
            cursor: pointer;
            border-radius: 3px;
        }
        
        button:hover {
            background-color: #0056b3;
        }
        
        .logout {
            background-color: #dc3545;
            float: right;
        }
        
        .logout:hover {
            background-color: #c82333;
        }
        
        input, select {
            padding: 8px;
            margin: 5px;
            border: 1px solid #ddd;
            border-radius: 3px;
            width: 200px;
        }
        
        .status {
            background-color: #d4edda;
            border: 1px solid #c3e6cb;
            color: #155724;
            padding: 10px;
            border-radius: 3px;
        }
        
        .recent-flights {
            max-height: 300px;
            overflow-y: auto;
        }
        
        .flight-item {
            padding: 10px;
            border-bottom: 1px solid #eee;
            display: flex;
            justify-content: space-between;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>Flight Map Admin Dashboard</h1>
        <button class="logout" onclick="logout()">Logout</button>
        <div style="clear: both;"></div>
    </div>

    <div class="container">
        <!-- Database Status -->
        <div class="section">
            <h2>Database Statistics</h2>
            <div class="status">
                MongoDB Atlas Connection: Active - Last updated: <%= hours %> hours ago
            </div>
            
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-number"><%= flightCount %></div>
                    <div class="stat-label">Total Flights</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number"><%= activeFlightCount %></div>
                    <div class="stat-label">Active Routes</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number" id="airportCount">-</div>
                    <div class="stat-label">Airports</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number" id="airlineCount">-</div>
                    <div class="stat-label">Airlines</div>
                </div>
            </div>
            
            <button onclick="refreshStats()">Refresh Statistics</button>
            <button onclick="testConnection()">Test Database Connection</button>
        </div>

        <!-- Recent Flight Activity -->
        <div class="section">
            <h2>Recent Flight Data</h2>
            <div class="recent-flights" id="recent-flights">
                <p>Loading recent flights...</p>
            </div>
            <button onclick="loadRecentFlights()">Refresh Flight Data</button>
        </div>

        <!-- Quick Search -->
        <div class="section">
            <h2>Quick Flight Search</h2>
            <form onsubmit="searchFlights(event)">
                <label>From Airport:</label>
                <input type="text" id="search-departure" placeholder="SEA" maxlength="3">
                <br>
                <label>To Airport:</label>
                <input type="text" id="search-arrival" placeholder="LAX" maxlength="3">
                <br>
                <button type="submit">Search Flights</button>
            </form>
            <div id="search-results" style="margin-top: 20px;"></div>
        </div>

        <!-- Admin Actions -->
        <div class="section">
            <h2>Database Management</h2>
            <button onclick="viewAllAirports()">View All Airports</button>
            <button onclick="viewAllAirlines()">View All Airlines</button>
            <button onclick="exportData()">Export Flight Data</button>
            <button onclick="viewSystemLogs()">View API Logs</button>
        </div>
    </div>

    <script>
        // Load additional stats on page load
        async function loadInitialStats() {
            try {
                // Get airport count
                const airportsResponse = await fetch('/api/airports?limit=1000');
                const airports = await airportsResponse.json();
                document.getElementById('airportCount').textContent = airports.length;

                // Get airline count
                const airlinesResponse = await fetch('/api/airlines');
                const airlines = await airlinesResponse.json();
                document.getElementById('airlineCount').textContent = airlines.length;

                // Load recent flights
                loadRecentFlights();
            } catch (error) {
                console.error('Failed to load stats:', error);
            }
        }

        async function loadRecentFlights() {
            try {
                const response = await fetch('/api/flights?limit=10');
                const flights = await response.json();
                
                const container = document.getElementById('recent-flights');
                container.innerHTML = flights.map(flight => `
                    <div class="flight-item">
                        <div>
                            <strong>${flight.departureAirport.iataCode} → ${flight.arrivalAirport.iataCode}</strong><br>
                            ${flight.airline} ${flight.flightNumber}
                        </div>
                        <div>
                            ${new Date(flight.departureTime).toLocaleDateString()}
                        </div>
                    </div>
                `).join('');
            } catch (error) {
                document.getElementById('recent-flights').innerHTML = 
                    '<p style="color: red;">Failed to load recent flights</p>';
            }
        }

        async function searchFlights(event) {
            event.preventDefault();
            const departure = document.getElementById('search-departure').value.toUpperCase();
            const arrival = document.getElementById('search-arrival').value.toUpperCase();
            
            if (!departure) {
                alert('Please enter a departure airport');
                return;
            }

            try {
                let url = `/api/flights?departure=${departure}`;
                if (arrival) url += `&arrival=${arrival}`;
                
                const response = await fetch(url);
                const flights = await response.json();
                
                const resultsDiv = document.getElementById('search-results');
                resultsDiv.innerHTML = `
                    <h4>Search Results: ${flights.length} flights found</h4>
                    ${flights.slice(0, 5).map(flight => `
                        <div class="flight-item">
                            <div>
                                <strong>${flight.departureAirport.iataCode} → ${flight.arrivalAirport.iataCode}</strong><br>
                                ${flight.airline} ${flight.flightNumber}<br>
                                ${flight.departureAirport.name} → ${flight.arrivalAirport.name}
                            </div>
                            <div>
                                ${new Date(flight.departureTime).toLocaleString()}
                            </div>
                        </div>
                    `).join('')}
                    ${flights.length > 5 ? `<p>... and ${flights.length - 5} more flights</p>` : ''}
                `;
            } catch (error) {
                document.getElementById('search-results').innerHTML = 
                    '<p style="color: red;">Search failed</p>';
            }
        }

        async function testConnection() {
            try {
                const response = await fetch('/api/test');
                const result = await response.json();
                alert(`Database Connection: OK\nMessage: ${result.message}\nTimestamp: ${result.timestamp}`);
            } catch (error) {
                alert('Database connection failed: ' + error.message);
            }
        }

        function refreshStats() {
            loadInitialStats();
            alert("Statistics refreshed!");
        }

        function viewAllAirports() {
            window.open('/api/airports', '_blank');
        }

        function viewAllAirlines() {
            window.open('/api/airlines', '_blank');
        }

        function exportData() {
            const link = document.createElement('a');
            link.href = '/api/flights?limit=1000';
            link.download = 'flights-export.json';
            link.click();
        }

        function viewSystemLogs() {
            alert("System logs feature - would show API access logs, errors, etc.");
        }

        function logout() {
            if (confirm("Are you sure you want to logout?")) {
                window.location.href = "/";
            }
        }

        // Load stats when page loads
        loadInitialStats();
    </script>
</body>
</html>