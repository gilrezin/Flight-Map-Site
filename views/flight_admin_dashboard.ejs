<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flight Map Admin</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f5f5f5;
        }
        
        .header {
            background-color: #333;
            color: white;
            padding: 15px;
            text-align: center;
        }
        
        .container {
            max-width: 800px;
            margin: 20px auto;
            background-color: white;
            padding: 20px;
            border-radius: 5px;
        }
        
        .section {
            margin-bottom: 30px;
            border: 1px solid #ddd;
            padding: 15px;
        }
        
        .section h2 {
            color: #333;
            border-bottom: 2px solid #007bff;
            padding-bottom: 5px;
        }
        
        button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            margin: 5px;
            cursor: pointer;
            border-radius: 3px;
        }
        
        button:hover {
            background-color: #0056b3;
        }
        
        .logout {
            background-color: #dc3545;
            float: right;
        }
        
        .logout:hover {
            background-color: #c82333;
        }
        
        input, select {
            padding: 8px;
            margin: 5px;
            border: 1px solid #ddd;
            border-radius: 3px;
        }
        
        .status {
            background-color: #d4edda;
            border: 1px solid #c3e6cb;
            color: #155724;
            padding: 10px;
            border-radius: 3px;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>Flight Map Admin Dashboard</h1>
        <button class="logout" onclick="logout()">Logout</button>
    </div>

    <div class="container">
        <!-- Database Status -->
        <div class="section">
            <h2>Database Status</h2>
            <div class="status">
                Database is online - Last updated: <%= hours %> hours ago
            </div>
            <p>Total Flights: <%= flightCount %></p>
            <p>Active Routes: <%= activeFlightCount %></p>
            <button onclick="refreshDB()">Refresh Database</button>
        </div>

        <!-- Update Flight Info -->
        <div class="section">
            <h2>Update Flight Information</h2>
            <label>Departure Airport:</label>
            <input type="text" id="departure" placeholder="SEA">
            <br>
            <label>Arrival Airport:</label>
            <input type="text" id="arrival" placeholder="LAX">
            <br>
            <label>Airline:</label>
            <select id="airline">
                <option>Delta Airlines</option>
                <option>American Airlines</option>
                <option>United Airlines</option>
            </select>
            <br>
            <label>Price:</label>
            <input type="number" id="price" placeholder="299">
            <br>
            <button onclick="updateFlight()">Update Flight</button>
        </div>

        <!-- Manage Routes -->
        <div class="section">
            <h2>Manage Routes</h2>
            <button onclick="addRoute()">Add New Route</button>
            <button onclick="viewRoutes()">View All Routes</button>
            <button onclick="deleteRoute()">Delete Route</button>
        </div>

        <!-- Admin Actions -->
        <div class="section">
            <h2>Admin Actions</h2>
            <button onclick="backupDB()">Backup Database</button>
            <button onclick="viewLogs()">View System Logs</button>
            <button onclick="manageUsers()">Manage Users</button>
        </div>
    </div>

    <script>
        function logout() {
            alert("Logging out...");
        }

        function refreshDB() {
            alert("Database refreshed successfully!");
        }

        function updateFlight() {
            var departure = document.getElementById('departure').value;
            var arrival = document.getElementById('arrival').value;
            alert("Flight updated: " + departure + " to " + arrival);
        }

        function addRoute() {
            alert("Add new route functionality");
        }

        function viewRoutes() {
            alert("Viewing all routes");
        }

        function deleteRoute() {
            alert("Delete route functionality");
        }

        function backupDB() {
            alert("Database backup started");
        }

        function viewLogs() {
            alert("Viewing system logs");
        }

        function manageUsers() {
            alert("User management panel");
        }
    </script>
</body>
</html>